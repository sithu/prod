
<div class="page-header">
  <h3>Application <small>List</small></h3>
</div>

<div class="panel panel-default">
   <div class="panel-heading">
      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">
         <i class="fa fa-plus fa-fw"></i> Add Your App
      </button>
   </div>
   
    <div class="panel-body">
    
        <table class="table">
            <thead>
                <tr>
                    <th>App Name</th>
                    <th>Property Count</th>
                </tr>
            </thead>
            <tbody id="applicationTable"></tbody>
        </table>
    
    </div>
 
</div>

<!-- Modals -->
<!-- Modal -->
<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Add your application to Hydra</h4>
    </div>
    <div class="modal-body">

        <div class="upload-form">

        <form class="form-horizontal" name="newappform" method="post" enctype="multipart/form-data" action="/application/upload">
            <fieldset>
            <div class="form-group">
                <div class="col-md-11 input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                    <input type="text" class="form-control" id="app_name" name="app_name" placeholder="App Name" autofocus/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-11 input-group">
                    <span class="input-group-addon"><i class="fa fa-sort-alpha-asc fa-fw"></i></span>
                    <input type="text" class="form-control" id="app_id" name="app_id" placeholder="Unique App ID"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-11 input-group">
                    <span class="input-group-addon"><i class="fa fa-folder-open fa-fw"></i></span>
                    <input type="file" class="form-control" name="properties_file" />
                </div>
            </div>
            <br>
            <div class="form-group">
                <div class="col-md-11 input-group">
                    <button type="submit" value="Submit" class="btn btn-default btn-info btn-lg btn-block">
                        <span class="fa fa-cloud-upload fa-fw"></span> Upload and Save
                    </button>
                </div>
            </div>
            </fieldset>
        </form>
    
    </div>

    </div><!-- End of Modal body -->
    </div><!-- End of Modal content -->
    </div><!-- End of Modal dialog -->
</div><!-- End of Modal -->

<script src="/js/home/index.js"></script>
